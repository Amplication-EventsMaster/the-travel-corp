datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Customer {
  createdAt   DateTime @default(now())
  email       String?
  firstName   String?
  id          String   @id @default(cuid())
  lastName    String?
  orders      Order[]
  phoneNumber String?
  updatedAt   DateTime @updatedAt
}

model Order {
  createdAt   DateTime  @default(now())
  customer    Customer? @relation(fields: [customerId], references: [id])
  customerId  String?
  id          String    @id @default(cuid())
  orderDate   DateTime?
  orderNumber String?
  totalAmount Float?
  updatedAt   DateTime  @updatedAt
}
